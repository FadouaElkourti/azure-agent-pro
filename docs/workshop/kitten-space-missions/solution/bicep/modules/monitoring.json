{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "languageVersion": "2.0",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "15207185795161891563"
    },
    "author": "Azure_Architect_Pro",
    "version": "1.0.0",
    "description": "Creates Application Insights and Log Analytics Workspace with modern configuration"
  },
  "definitions": {
    "LogAnalyticsSkuType": {
      "type": "string",
      "allowedValues": [
        "Free",
        "PerGB2018",
        "PerNode",
        "Premium",
        "Standalone",
        "Standard"
      ],
      "metadata": {
        "__bicep_export!": true
      }
    },
    "AppInsightsType": {
      "type": "string",
      "allowedValues": [
        "other",
        "web"
      ],
      "metadata": {
        "__bicep_export!": true
      }
    }
  },
  "parameters": {
    "logAnalyticsWorkspaceName": {
      "type": "string",
      "minLength": 4,
      "maxLength": 63,
      "metadata": {
        "description": "Log Analytics Workspace name"
      }
    },
    "applicationInsightsName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "metadata": {
        "description": "Application Insights name"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for resource deployment"
      }
    },
    "logAnalyticsSku": {
      "$ref": "#/definitions/LogAnalyticsSkuType",
      "defaultValue": "PerGB2018",
      "metadata": {
        "description": "Log Analytics Workspace SKU"
      }
    },
    "retentionInDays": {
      "type": "int",
      "defaultValue": 7,
      "minValue": 7,
      "maxValue": 730,
      "metadata": {
        "description": "Log Analytics data retention in days"
      }
    },
    "applicationType": {
      "$ref": "#/definitions/AppInsightsType",
      "defaultValue": "web",
      "metadata": {
        "description": "Application Insights type"
      }
    },
    "samplingPercentage": {
      "type": "int",
      "defaultValue": 50,
      "minValue": 0,
      "maxValue": 100,
      "metadata": {
        "description": "Application Insights sampling percentage (0-100)"
      }
    },
    "publicNetworkAccessForIngestion": {
      "type": "string",
      "defaultValue": "Enabled",
      "metadata": {
        "description": "Enable Application Insights ingestion over public network"
      }
    },
    "publicNetworkAccessForQuery": {
      "type": "string",
      "defaultValue": "Enabled",
      "metadata": {
        "description": "Enable Application Insights query over public network"
      }
    },
    "disableIpMasking": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Disable IP masking in Application Insights telemetry"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {
        "Environment": "dev",
        "Project": "kitten-space-missions",
        "CreatedBy": "bicep-template",
        "ManagedBy": "Azure-Agent-Pro"
      },
      "metadata": {
        "description": "Resource tags for organization and governance"
      }
    }
  },
  "resources": {
    "logAnalyticsWorkspace": {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2023-09-01",
      "name": "[parameters('logAnalyticsWorkspaceName')]",
      "location": "[parameters('location')]",
      "tags": "[union(parameters('tags'), createObject('resource', 'log-analytics-workspace', 'deployedBy', 'Bicep'))]",
      "properties": {
        "sku": {
          "name": "[parameters('logAnalyticsSku')]"
        },
        "retentionInDays": "[parameters('retentionInDays')]",
        "features": {
          "enableLogAccessUsingOnlyResourcePermissions": true,
          "disableLocalAuth": false,
          "enableDataExport": false
        },
        "workspaceCapping": {
          "dailyQuotaGb": -1
        },
        "publicNetworkAccessForIngestion": "Enabled",
        "publicNetworkAccessForQuery": "Enabled"
      }
    },
    "applicationInsights": {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[parameters('applicationInsightsName')]",
      "location": "[parameters('location')]",
      "kind": "[parameters('applicationType')]",
      "tags": "[union(parameters('tags'), createObject('resource', 'application-insights', 'deployedBy', 'Bicep'))]",
      "properties": {
        "Application_Type": "[parameters('applicationType')]",
        "WorkspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]",
        "IngestionMode": "LogAnalytics",
        "publicNetworkAccessForIngestion": "[parameters('publicNetworkAccessForIngestion')]",
        "publicNetworkAccessForQuery": "[parameters('publicNetworkAccessForQuery')]",
        "DisableIpMasking": "[parameters('disableIpMasking')]",
        "SamplingPercentage": "[parameters('samplingPercentage')]",
        "RetentionInDays": "[parameters('retentionInDays')]",
        "Flow_Type": "Bluefield",
        "Request_Source": "rest"
      },
      "dependsOn": [
        "logAnalyticsWorkspace"
      ]
    },
    "slowPageLoadDetection": {
      "type": "Microsoft.Insights/components/ProactiveDetectionConfigs",
      "apiVersion": "2018-05-01-preview",
      "name": "[format('{0}/{1}', parameters('applicationInsightsName'), 'slowpageloadtime')]",
      "properties": {
        "enabled": true,
        "sendEmailsToSubscriptionOwners": false,
        "customEmails": [],
        "ruleDefinitions": {
          "Name": "slowpageloadtime",
          "DisplayName": "Slow page load time",
          "Description": "Smart Detection rules notify you of performance anomaly issues.",
          "HelpUrl": "https://docs.microsoft.com/en-us/azure/application-insights/app-insights-proactive-performance-diagnostics",
          "IsHidden": false,
          "IsEnabledByDefault": true,
          "IsInPreview": false,
          "SupportsEmailNotifications": true
        }
      },
      "dependsOn": [
        "applicationInsights"
      ]
    },
    "slowServerResponseDetection": {
      "type": "Microsoft.Insights/components/ProactiveDetectionConfigs",
      "apiVersion": "2018-05-01-preview",
      "name": "[format('{0}/{1}', parameters('applicationInsightsName'), 'slowserverresponsetime')]",
      "properties": {
        "enabled": true,
        "sendEmailsToSubscriptionOwners": false,
