      ]
    },
    "degradationDependencyDurationDetection": {
      "type": "Microsoft.Insights/components/ProactiveDetectionConfigs",
      "apiVersion": "2018-05-01-preview",
      "name": "[format('{0}/{1}', parameters('applicationInsightsName'), 'degradationindependencyduration')]",
      "properties": {
        "enabled": true,
